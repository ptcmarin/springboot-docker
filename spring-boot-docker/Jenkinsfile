pipeline{
    agent any

    stages{
        stage("Build"){
            
            steps{
                dir("spring-boot-docker/"){
                    echo "COMPILANDO"
                    sh "mvn -version"
                    sh "mvn clean install"
                }
            }
        }

        stage("Docker"){
            steps{
                dir("spring-boot-docker/"){
                    echo "CREANDO DOCKER"
                    //sh "docker-compose up -d --build"
                    sh docker-compose up --force-recreate --build -d
                    sh docker image prune -f
                }
            }
        }
    }
    post {
        always {
            cleanWs()
        }
    }
}
